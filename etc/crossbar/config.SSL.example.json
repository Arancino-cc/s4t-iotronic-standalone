{
   "version": 2,
   "controller": {
   },
   "workers": [
      {
         "type": "router",
         "realms": [
            {
               "name": "s4t",
               "roles": [
                  {
                     "name": "anonymous",
                     "permissions": [
                        {
                           "uri": "*",
                           "allow": {
                                "publish": true,
                                "subscribe": true,
                                "call": true,
                                "register": true
                            }
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "type": "websocket",
                "endpoint": {
                  "type": "tcp",
                  "port": 8143,
                  "tls": {
                    "key": "/opt/stack4things/iotronic-standalone/ssl/iotronic.key",
                    "certificate": "/opt/stack4things/iotronic-standalone/ssl/iotronic.crt",
                    "ca_certificates": [
                      "/opt/stack4things/iotronic-standalone/ssl/s4t_ca.crt"
                    ],
                    "ciphers": "ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:ECDH+3DES:DH+3DES:RSA+AES:RSA+3DES:!ADH:!AECDH:!MD5:!DSS"
                  }

                },
                "debug":true,
                "options":{
                        "enable_webstatus":true,
                        "fail_by_drop": true,
                        "open_handshake_timeout": 2500,
                        "close_handshake_timeout": 1000,
                        "auto_ping_interval": 10000,
                        "auto_ping_timeout": 5000,
                        "auto_ping_size": 4
                }
            }
         ]
      }
   ]
}
